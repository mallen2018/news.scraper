<main>

  {{!-- parallax with coffee backdrop --}}
  <div class="parallax-container">
    <div class="parallax"><img src="../images/coffee.jpg"></div>
      <br>
      <br>>
  </div>  

  {{!-- banner asking user to scrape or inform user how many articles have been scraped --}}
  <div class="row center">
       <ul class="collection">
          {{#unless this.num}}
             <li class="collection-item grey lighten-1 black-text"><h4>Scrape NPR articles by pressing the Scrape button.</h4></li>
          {{/unless}}                  
          {{#if this.num}}             
              <li class="collection-item blue lighten-1 white-text"><h4>You have scraped {{this.num}} articles.</h4></li>
          {{/if}}
      </ul>
  </div>
  {{!-- Container for articles --}}
  <div class="container">
    <div class="row">
    {{#each article}}
      <div class="col l4">
        <div class="card hoverable index">
          <div class="card-image">
            <a class="articleLink" href={{this.link}} target="blank"><img src="{{this.imgLink}}"></a>
          </div>
          <div class="card-content">
          <h5>{{this.title}}</h5>
            <p>{{this.teaser}}</p>
          </div>
          <div class="card-action center">
            <a class="btn black" id="save" data-imglink="{{this.imgLink}}" data-title="{{this.title}}" data-link="{{this.link}}" data-teaser="{{this.teaser}}">Save Article</a>
          </div>
        </div>
      </div>
    {{/each}}
    </div>
  </div>
